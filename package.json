{
  "name": "ssgs-calc",
  "version": "1.0.0",
  "description": "SSGS Calc è una semplice calcolatrice da riga di comando sviluppata in Node.js. Questo progetto è stato creato per fornire un'applicazione interattiva che consente agli utenti di eseguire operazioni matematiche di base e avanzate direttamente dal terminale.",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest --coverage --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VicEnri/SSGS-CALC.git"
  },
  "keywords": [
    "calculator",
    "cli",
    "node",
    "jest",
    "math",
    "command-line",
    "interactive"
  ],
  "author": "enrico vicale  <enricovicale99@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VicEnri/SSGS-CALC/issues"
  },
  "homepage": "https://github.com/VicEnri/SSGS-CALC#readme",
  "devDependencies": {
    "jest": "^30.0.4"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
